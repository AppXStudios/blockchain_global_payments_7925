{
  "version": 2,
  "builds": [
    { 
      "src": "api/server.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": "api/**"
      }
    },
    { 
      "src": "next.config.js", 
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/server.js" 
    },
    {
      "src": "/health",
      "dest": "/api/health.js"
    }
  ],
  "functions": {
    "api/server.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/health.js": {
      "maxDuration": 10,
      "memory": 256
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/webhooks/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, x-nowpayments-sig"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}